<Page
    x:Class="ConduitDEVAPP.Views.rootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConduitDEVAPP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ViewModels="using:ConduitDEVAPP.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.DataContext>
        <ViewModels:RootPageViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    
    
    <Grid x:Name="frameGrid" Background="#1A181B" ColumnDefinitions="*, *" RowDefinitions ="*, *" Grid.Row="1" Margin="15, 0, 15, 0" >
        <Frame x:Name="topleftFrame" Grid.Column="0" Grid.Row="0" CornerRadius="8" Margin="10, 10, 10, 10" Grid.ColumnSpan="{Binding FullScreenValue,Mode=OneWay}" Grid.RowSpan="{Binding FullScreenValue, Mode=OneWay}" Visibility="{Binding TopLeftVisibility, Mode=OneWay}"/>
        <AppBarButton Icon="FullScreen"  Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,5,5,10" Command="{Binding TopLeftFullScreenCommand, Mode=OneWay}" Visibility="{Binding TopLeftButtonVisibility, Mode=OneWay}"/>
        <Frame x:Name="bottomleftFrame" Grid.Column="0" Grid.Row="1" CornerRadius="8" Margin="10,10,10,10" Visibility="{Binding BottomRightVisibility, Mode=OneWay}" />
        <AppBarButton Icon="FullScreen"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,5,5,10" Visibility="{Binding BottomRightButtonVisibility, Mode=OneWay}"/>
        <Frame x:Name="toprightFrame" Grid.Column="1" Grid.Row="0" CornerRadius="8" Margin="10,10,10,10" Visibility="{Binding TopRightVisibility, Mode=OneWay}"/>
        <AppBarButton Icon="FullScreen"  Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,5,5,10" Visibility="{Binding TopRightButtonVisibility, Mode=OneWay}" />
        <Frame x:Name="bottomrightFrame" Grid.Row="1" Grid.Column="1" CornerRadius="8" Margin="10,10,10,10" Visibility="{Binding BottomLeftVisibility, Mode=OneWay}"/>
        <AppBarButton Icon="FullScreen"  Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,5,5,10" Visibility="{Binding BottomLeftButtonVisibility, Mode=OneWay}"/>
        <TextBlock Text="{Binding FullScreenValue, Mode=OneWay}" Grid.Row="1" Grid.Column="1"/>
    </Grid>
        
</Page>
